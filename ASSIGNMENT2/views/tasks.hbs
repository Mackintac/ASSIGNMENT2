<h1>Your Study Tasks</h1>
<a href='/tasks/add' class='btn btn-primary mb-3'>Add New Task</a>
<table class='table table-striped'>
  <thead>
    <tr class='rounded'>
      <th>Title</th>
      <th>Status</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each tasks}}
      <tr>
        <td>{{this.title}}</td>
        <td>{{this.status}}</td>
        <td>{{this.description}}</td>
        <td>
          <a
            href='/tasks/edit/{{this._id}}'
            class='btn btn-sm btn-warning'
          >Edit</a>
          <form
            action='/tasks/delete/{{this._id}}'
            method='POST'
            style='display:inline;'
            onsubmit="return confirm('Are you sure you want to delete this task?');"
          >
            <button type='submit' class='btn btn-sm btn-danger'>Delete</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>